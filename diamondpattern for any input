#include <stdio.h>

int main()
{
	int sp,row,col;
	int n;
	
	scanf("%d",&n);
	
	for(row=1;row<=n;row++)
	{
		for(sp=1;sp<=n-row;sp++)
		{
				printf(" ");
		}
		for(col=1;col<=(2*row)-1;col++)
		{
				printf("%d",col);
		}
	  printf("\n");
	}
	
	for(row=1;row<=n-1;row++)
  {
		for(sp=1;sp<=row;sp++)
    {
			printf(" ");
		}
		for(col=1;col<=2*(n-row)-1;col++)
    {
			printf("%d",col);
		}
	  printf("\n");
	}
	return 0;
}
