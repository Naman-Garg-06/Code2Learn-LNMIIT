#include<stdio.h>
void sort(int *add,int n)
{
  for(int i=0;i<n-1;i++)
  {
    for(int j=0;j<n-i-1;j++)
    {
      if(*(add+j)<*(add+j+1))
      {
        int swap=*(add+j);
        *(add+j)=*(add+j+1);
        *(add+j+1)=*(add+j);
      }
    }
  }
}
int main()
{
  printf("Enter the size of array:\n");
  int n;
  scanf("%d",&n);
  int a[n];
  printf("Enter the array elements:\n");
  for(int i=0;i<n;i++)
  {
    scanf("%d",&a[i]);
  }
  sort(&a[0],n);
  printf("Array after sorting in descending order is:\n");
  for(int i=0;i<n;i++)
  {
    printf("%2d",a[i]);
  }
  return 0;
}
